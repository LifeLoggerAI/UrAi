rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }
    
    match /voiceEvents/{eventId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }
    
    match /dreamEvents/{dreamId} {
        allow read, write: if isOwner(request.resource.data.uid);
    }

    match /innerTexts/{textId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /people/{personId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /goals/{goalId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /tasks/{taskId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /calendarEvents/{eventId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }
    
    match /habitWatch/{habitId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /onboardIntake/{intakeId} {
      allow write: if isAuthed();
    }

    match /permissions/{uid} {
      allow read, write: if isOwner(uid);
    }
    
    match /companions/{companionId} {
        allow read, write: if isOwner(request.resource.data.uid);
    }
    
    match /memoryBlooms/{bloomId} {
        allow read, write: if isAuthed();
    }
    
    match /weeklyScrolls/{scrollId} {
        allow read, write: if isOwner(request.resource.data.uid);
    }
    
    match /audioEvents/{audioId} {
        allow read, write: if isOwner(request.resource.data.uid);
    }

    match /narrativeLoops/{loopId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /rebirthMoments/{rebirthId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /thresholdMoments/{thresholdId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }

    match /auraScrolls/{scrollId} {
      allow read, write: if isOwner(request.resource.data.uid);
    }
    
    match /proTiers/{uid} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid);
    }

    match /billing/{uid} {
      allow read: if isOwner(uid);
    }
    
    match /rituals/{id} {
      allow read, write: if isAuthed();
    }
    match /insights/{id} {
      allow read, write: if isAuthed();
    }
    match /socialGraph/{id} {
      allow read, write: if isAuthed();
    }
    match /assets/{id} {
      allow read, write: if isAuthed();
    }
    match /partnerAuth/{id} {
      allow read: if true;
    }
    match /dataMarketplace/{id} {
      allow read: if true;
    }
  }
}
