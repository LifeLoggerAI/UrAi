{
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["**/__tests__/**", "**/*.test.ts", "test", "lib", "node_modules"],
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noUnusedLocals": true
  }
}
