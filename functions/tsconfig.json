{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "types": ["node"], 
    "moduleResolution": "node" 
  },
  "include": [
    "src"
  ],
  "compileOnSave": true
}
