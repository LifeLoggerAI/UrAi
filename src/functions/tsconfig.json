
{
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["**/__tests__/**", "**/*.test.ts", "test", "lib", "node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true
  }
}
